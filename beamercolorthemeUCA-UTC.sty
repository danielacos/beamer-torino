%----- TEMPLATES -----%

\defbeamertemplate*{section page}{mine}[1][\alert{\textbf{Section \thesection}}]{%
	\begin{centering}
		{\usebeamerfont{section name}\usebeamercolor[fg]{section name}#1}
		\vskip1em\par
		\begin{beamercolorbox}[sep=12pt,center]{sectionlike}
			\usebeamerfont{section title}\textbf{\insertsection}\par
		\end{beamercolorbox}
	\end{centering}
}
\renewcommand*{\sectionpage}{\usebeamertemplate*{section page}}

\defbeamertemplate*{subsection page}{mine}[1][]{%
	\begin{centering}
		\begin{beamercolorbox}[sep=12pt,center]{subsectionlike}
			\usebeamerfont{subsection title}\textbf{\insertsubsection}\par
		\end{beamercolorbox}
	\end{centering}
}
\renewcommand*{\subsectionpage}{\usebeamertemplate*{subsection page}}

\newcommand{\subsubsectionpage}{\usebeamertemplate{subsubsection page}}

\AtBeginSection{\frame{\sectionpage}}
\AtBeginSubsection{\frame{\subsectionpage}}
